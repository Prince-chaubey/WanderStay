<body
  class="bg-gradient-to-br from-gray-100 via-indigo-50 to-purple-100 min-h-screen flex flex-col items-center font-sans">

  <!-- Header -->
  <header class="w-full text-center py-8 mb-6 mt-10">
    <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 tracking-tight drop-shadow-sm">
      🏡 <%= listing.title %>
    </h1>
    <p class="mt-2 text-gray-600 text-sm md:text-base flex items-center justify-center gap-1">
      📍 <span class="font-medium text-gray-700">
        <%= listing.location %>, <%= listing.country %>
      </span>
    </p>
  </header>

  <!-- Listing Card -->
  <div
    class="bg-white rounded-3xl mx-auto shadow-xl max-w-4xl w-full overflow-hidden hover:shadow-2xl transition duration-300">

    <!-- Image -->
    <div class="relative">
      <img src="<%= listing.url %>" alt="Listing Image" class="w-full h-80 md:h-[450px] object-cover">
      <span
        class="absolute top-5 right-5 bg-indigo-600 text-white text-xs md:text-sm font-semibold px-3 py-1.5 rounded-full shadow-lg">
        Popular Choice
      </span>
    </div>

    <!-- Details -->
    <div class="p-8 md:p-10">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-3">
        <p class="text-2xl font-bold text-indigo-600">
          ₹<%= listing.price %>
            <span class="text-sm text-gray-500 font-medium">/ night</span>
        </p>
        <p class="text-gray-500 text-sm italic">Hosted by <span class="font-semibold text-gray-700">
            <%= listing.owner.username %>
          </span></p>
      </div>

      <p class="mt-4 text-gray-700 text-base leading-relaxed">
        <%= listing.description %>
      </p>

      <!-- Features -->
      <div class="mt-8 grid grid-cols-2 md:grid-cols-4 gap-4 text-sm md:text-base text-gray-700 font-medium">
        <div class="flex items-center gap-2 bg-gray-50 px-3 py-2 rounded-lg">🛏️ <span>2 Beds</span></div>
        <div class="flex items-center gap-2 bg-gray-50 px-3 py-2 rounded-lg">🚿 <span>1 Bath</span></div>
        <div class="flex items-center gap-2 bg-gray-50 px-3 py-2 rounded-lg">📶 <span>WiFi</span></div>
        <div class="flex items-center gap-2 bg-gray-50 px-3 py-2 rounded-lg">🌆 <span>City View</span></div>
      </div>

      <!-- ⭐ Rating & Comment Section -->
      <div class="mt-12 border-t pt-8">
        <h2 class="text-xl md:text-2xl font-bold text-gray-900 mb-6">Rate this Property</h2>

        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="space-y-6">

          <!-- Rating -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Your Rating</label>
            <div class="flex gap-3">
              <% for(let i=1; i<=5; i++){ %>
                <label class="flex items-center gap-1 cursor-pointer">
                  <input type="radio" name="rating" value="<%= i %>" class="text-indigo-600" required>
                  <span class="text-sm">
                    <%= i %> ⭐
                  </span>
                </label>
                <% } %>
            </div>
          </div>

          <!-- Comment -->
          <div>
            <label for="comment" class="block text-sm font-semibold text-gray-700 mb-2">Your Comment</label>
            <textarea id="comment" name="comment" rows="4" required
              class="w-full rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 px-4 py-3 text-sm md:text-base shadow-sm"></textarea>
          </div>

          <!-- Submit -->
          <% if (currentUser) { %>
            <button type="submit"
              class="px-6 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-600 hover:to-purple-700 text-sm md:text-base shadow-lg transition">
              Submit Review
            </button>
            <% } else { %>
              <p class="text-red-500 text-sm mt-2">⚠️ You must be logged in to submit a review.</p>
              <% } %>
        </form>
      </div>

      <!-- 📌 Display Reviews -->
      <% if(listing.reviews && listing.reviews.length> 0) { %>
        <div class="mt-12 border-t pt-8">
          <h2 class="text-xl md:text-2xl font-bold text-gray-900 mb-6">What People Are Saying</h2>

          <div class="space-y-6">
            <% listing.reviews.forEach(review=> { %>
              <div class="bg-gray-50 border border-gray-200 rounded-xl p-5 shadow-sm hover:shadow-md transition">
                <div class="flex items-center justify-between mb-3">
                  <!-- Stars -->
                  <div class="flex items-center">
                    <% for(let i=1; i<=5; i++){ %>
                      <% if(i <=review.rating) { %>
                        <span class="text-yellow-400 text-lg">★</span>
                        <% } else { %>
                          <span class="text-gray-300 text-lg">★</span>
                          <% } %>
                            <% } %>
                  </div>

                  <!-- Metadata -->
                  <div class="flex items-center text-sm text-gray-500 flex-col gap-4 mt-6">
                    <div>
                      <span class="font-medium text-gray-700">👤 <%= listing.owner.username %></span>
                    </div>



                    <!-- Delete Button -->
                    <div>
                      <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                        method="POST">
                        <button type="submit"
                          class="flex items-center gap-1 text-red-500 hover:text-red-700 text-sm font-medium transition">
                          🗑️ <span class="hidden sm:inline">Delete</span>
                        </button>
                      </form>
                    </div>
                  </div>
                </div>

                <!-- Comment -->
                <p class="text-gray-700 text-sm md:text-base leading-relaxed italic">
                  <%= review.comment %>
                </p>
              </div>
              <% }) %>
          </div>
        </div>
        <% } %>

          <!-- Back and Edit Buttons -->
          <div class="mt-10 flex flex-col sm:flex-row justify-between gap-4">
            <a href="/listings" class="flex-1">
              <button
                class="w-full px-4 py-2 bg-gray-200 text-gray-700 font-medium rounded-xl hover:bg-gray-300 text-sm md:text-base transition">
                ← Back
              </button>
            </a>

            <a href="/listings/<%= listing._id %>/edit">
              <button
                class="flex-1 px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-600 hover:to-purple-700 text-sm md:text-base shadow-lg transition">
                Edit
              </button>
            </a>
          </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="mt-12 mb-6 text-gray-500 text-xs md:text-sm text-center">
    © <%= new Date().getFullYear() %> WanderStay • Cozy stays worldwide 🌍
  </footer>
</body>