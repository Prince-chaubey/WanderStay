<body
  class="bg-gradient-to-br from-gray-100 via-indigo-50 to-purple-100 min-h-screen flex justify-center items-center font-sans">

  <!-- Header -->
  <header class="w-full text-center py-6 mb-6 mt-14">
    <h1 class="text-3xl md:text-4xl font-extrabold text-gray-800 tracking-tight">
      🏡 <%= listing.title %>
    </h1>
    <p class="mt-2 text-gray-600 text-sm md:text-base flex items-center justify-center gap-1">
      📍 <span>
        <%= listing.location %>, <%= listing.country %>
      </span>
    </p>
  </header>


  <div
    class="bg-white rounded-3xl mx-auto shadow-xl max-w-3xl w-full overflow-hidden hover:shadow-2xl transition duration-300 justify-center">


    <div class="relative">
      <img src="<%= listing.url %>" alt="Listing Image" class="w-full h-72 md:h-96 object-cover">
      <span
        class="absolute top-4 right-4 bg-indigo-600 text-white text-xs md:text-sm font-semibold px-3 py-1.5 rounded-full shadow-md">
        Popular
      </span>
    </div>


    <div class="p-8">

      <div class="flex flex-col md:flex-row justify-between md:items-center gap-2">

        <p class="text-lg md:text-xl font-bold text-indigo-600">
          ₹<%= listing.price %>
          <span class="text-sm text-gray-500 font-medium">/ night</span>
        </p>
      </div>


      <p class="mt-4 text-gray-700 text-sm md:text-base leading-relaxed">
        <%= listing.description %>
      </p>


      <div class="mt-6 grid grid-cols-2 md:grid-cols-4 gap-3 text-sm md:text-base text-gray-600">
        <div class="flex items-center gap-2">🛏️ <span>2 Beds</span></div>
        <div class="flex items-center gap-2">🚿 <span>1 Bath</span></div>
        <div class="flex items-center gap-2">📶 <span>WiFi</span></div>
        <div class="flex items-center gap-2">🌆 <span>City View</span></div>
      </div>


      <!-- ⭐ Rating & Comment Section -->
      <div class="mt-10 border-t pt-6">
        <h2 class="text-lg md:text-xl font-bold text-gray-800 mb-4">Rate this Property</h2>

        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="space-y-4">

          <!-- Rating -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Your Rating:</label>
            <div class="flex gap-2">
              <% for(let i=1; i<=5; i++){ %>
                <label class="flex items-center gap-1 cursor-pointer">
                  <input type="radio" name="rating" value="<%= i %>" class="text-indigo-600" required>
                  <span><%= i %> ⭐</span>
                </label>
              <% } %>
            </div>
          </div>

          <!-- Comment -->
          <div>
            <label for="comment" class="block text-sm font-medium text-gray-700 mb-2">Your Comment:</label>
            <textarea id="comment" name="comment" rows="3" required
              class="w-full rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 px-3 py-2 text-sm md:text-base"></textarea>
          </div>

          <!-- Submit -->
          <button type="submit"
            class="px-5 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-600 hover:to-purple-700 text-sm md:text-base shadow-md transition">
            Submit Review
          </button>
        </form>
      </div>


      <!-- 📌 Display Reviews -->
      <% if(listing.reviews && listing.reviews.length > 0) { %>
      <div class="mt-10 border-t pt-6">
        <h2 class="text-lg md:text-xl font-bold text-gray-800 mb-4">What people are saying</h2>

        <div class="space-y-4">
          <% listing.reviews.forEach(review => { %>
            <div class="bg-gray-50 border border-gray-200 rounded-xl p-4 shadow-sm hover:shadow-md transition">
              <div class="flex items-center justify-between mb-2">
                <!-- Stars -->
                <div class="flex items-center">
                  <% for(let i=1; i<=5; i++){ %>
                    <% if(i <= review.rating) { %>
                      <span class="text-yellow-400">★</span>
                    <% } else { %>
                      <span class="text-gray-300">★</span>
                    <% } %>
                  <% } %>
                </div>
                <span class="text-xs text-gray-500"><%= review.createdAt.toDateString() %></span>
              </div>
              <p class="text-gray-700 text-sm md:text-base leading-relaxed">
                <%= review.comment %>
              </p>
            </div>
          <% }) %>
        </div>
      </div>
      <% } %>


      <div class="mt-8 flex flex-col sm:flex-row justify-between gap-4">
        <a href="/listings" class="flex-1">
          <button
            class="w-full px-4 py-2 bg-gray-200 text-gray-700 font-medium rounded-xl hover:bg-gray-300 text-sm md:text-base transition">
            ← Back
          </button>
        </a>

        <a href="/listings/<%= listing._id %>/edit">
          <button
            class="flex-1 px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-600 hover:to-purple-700 text-sm md:text-base shadow-md transition">
            Edit
          </button>
        </a>
      </div>
    </div>
  </div>


  <footer class="mt-12 text-gray-500 text-xs md:text-sm text-center ">
    © <%= new Date().getFullYear() %> WanderStay • Cozy stays worldwide 🌍
  </footer>

</body>
