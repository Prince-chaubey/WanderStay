<body class="bg-gradient-to-br from-gray-100 via-indigo-50 to-purple-100 min-h-screen flex justify-center items-center font-sans">

  <div class="bg-white rounded-3xl shadow-xl max-w-2xl w-full p-8 mt-[100px] mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold text-gray-800 text-center mb-6">‚úèÔ∏è Edit Listing</h2>

    <!-- Form to update listing -->
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="space-y-5">

      <!-- Title -->
      <div>
        <label class="block text-gray-700 font-medium mb-1">Title</label>
        <input type="text" name="title" value="<%= listing.title %>" required
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 transition outline-none" />
      </div>

      <!-- Location + Country -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-gray-700 font-medium mb-1">Location</label>
          <input type="text" name="location" value="<%= listing.location %>" required
            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 transition outline-none" />
        </div>
        <div>
          <label class="block text-gray-700 font-medium mb-1">Country</label>
          <input type="text" name="country" value="<%= listing.country %>" required
            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 transition outline-none" />
        </div>
      </div>

      <!-- Price -->
      <div>
        <label class="block text-gray-700 font-medium mb-1">Price (‚Çπ per night)</label>
        <input type="number" name="price" value="<%= listing.price %>" min="1" required
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 transition outline-none" />
      </div>

      <!-- Image URL -->
      <div>
        <label class="block text-gray-700 font-medium mb-1">Image URL</label>
        <input type="url" name="url" value="<%= listing.url %>" required
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 transition outline-none" />
      </div>

      <!-- Description -->
      <div>
        <label class="block text-gray-700 font-medium mb-1">Description</label>
        <textarea name="description" rows="4"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 transition outline-none"><%= listing.description %></textarea>
      </div>

      <!-- Buttons -->
      <div class="flex justify-between gap-4">
        <a href="/listings" class="flex-1">
          <button type="button"
            class="w-full py-2 bg-gray-200 text-gray-700 rounded-xl hover:bg-gray-300 transition">
            ‚Üê Cancel
          </button>
        </a>
       
        <button type="submit"
          class="flex-1 py-2 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-600 hover:to-purple-700 transition">
          üíæ Save Changes
        </button>
        

      </div>
    </form>
  </div>

</body>
