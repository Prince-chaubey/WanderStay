
<body class="bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 min-h-screen flex flex-col font-sans">


  <header class="w-full bg-white/80 backdrop-blur-md shadow-md mt-[70px] z-40 px-6 py-4 mb-[50px]">
    <div class="max-w-7xl mx-auto flex flex-col items-center">
      <h1 class="text-3xl md:text-4xl font-extrabold text-gray-800 tracking-tight">
        üåç WanderStay Listings
      </h1>
      <p class="mt-2 text-base md:text-lg text-gray-600 text-center max-w-2xl">
        Discover unique stays, cozy homes, and luxurious escapes from anywhere in the world ‚ú®
      </p>
    </div>
  </header>

  <!-- Listings Grid -->
  <main class="flex-grow px-6 py-10">
    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
      <% listings.forEach(listing => { %>
        <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
          <img src="<%= listing.url %>" alt="Image for <%= listing.title %>" class="w-full h-44 object-cover">
          <div class="p-4">
            <h2 class="text-lg font-semibold text-gray-800 truncate" title="<%= listing.title %>"><%= listing.title %></h2>
            <p class="text-gray-600 text-sm mt-1 truncate" title="<%= listing.location %>, <%= listing.country %>">
              <%= listing.location %>, <%= listing.country %>
            </p>
            <p class="text-indigo-600 font-bold mt-2">‚Çπ<%= listing.price %> / night</p>
            <a href="/listings/<%= listing._id %>">
              <button class="mt-4 w-full bg-indigo-500 text-white py-2.5 rounded-lg hover:bg-indigo-600 text-sm font-medium transition-colors">
                View Details
              </button>
            </a>
          </div>
        </div>
      <% }) %>
    </section>
  </main>

  <!-- Footer -->
  <footer class="mt-12 border-t border-gray-300 py-6 text-center text-gray-600 text-sm">
    Made with ‚ù§Ô∏è by <span class="font-semibold">WanderStay</span>
  </footer>

</body>

