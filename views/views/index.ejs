<body class="bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 min-h-screen flex flex-col font-sans">


  <header class="w-full bg-white/80 backdrop-blur-md shadow-md mt-[70px] z-40 px-6 py-4 mb-[50px]">
    <div class="max-w-7xl mx-auto flex flex-col items-center">
      <h1 class="text-3xl md:text-4xl font-extrabold text-gray-800 tracking-tight">
        üåç WanderStay Listings
      </h1>
      <p class="mt-2 text-base md:text-lg text-gray-600 text-center max-w-2xl">
        Discover unique stays, cozy homes, and luxurious escapes from anywhere in the world ‚ú®
      </p>
    </div>
  </header>


 

  <!-- Listings Grid -->
  <main class="flex-grow px-6 py-10">
    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
      <% listings.forEach(listing=> { %>
        <div
          class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
          <img src="<%= listing.url %>" alt="Image for <%= listing.title %>" class="w-full h-44 object-cover">
          <div class="p-4">
            <h2 class="text-lg font-semibold text-gray-800 truncate" title="<%= listing.title %>">
              <%= listing.title %>
            </h2>
            <p class="text-gray-600 text-sm mt-1 truncate" title="<%= listing.location %>, <%= listing.country %>">
              <%= listing.location %>, <%= listing.country %>
            </p>
            <p class="text-indigo-600 font-bold mt-2">‚Çπ<%= listing.price %> / night</p>

            <div class="flex justify-center items-center gap-3">

              <a href="/listings/<%= listing._id %>">
                <button
                  class="mt-4 w-full bg-indigo-500 text-white py-2.5 rounded-lg hover:bg-indigo-600 text-sm font-medium transition-colors p-4">
                  View Details
                </button>
              </a>

              <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                <button
                  class="mt-4 w-full bg-red-500 text-white py-2.5 rounded-lg hover:bg-red-600 text-sm font-medium transition-colors p-4">
                  Delete
                </button>
              </form>

            </div>

          </div>
        </div>
        <% }) %>
    </section>
  </main>


  <div class="w-[200px] mx-auto">
    <a href="/listings/new"
      class="block text-center px-6 py-3 bg-gradient-to-r from-pink-500 to-purple-600 text-white font-semibold rounded-full shadow-lg hover:from-pink-600 hover:to-purple-700 transition-all duration-300">
      + List Your Home
    </a>
  </div>

  <!-- Footer -->
  <footer class="mt-12 border-t border-gray-300 py-6 text-center text-gray-600 text-sm">
    Made with ‚ù§Ô∏è by <span class="font-semibold">WanderStay</span>
  </footer>

</body>