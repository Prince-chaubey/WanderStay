<body class="bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 min-h-screen flex items-center justify-center font-sans px-4">
  <div class="bg-white/90 backdrop-blur-md shadow-2xl rounded-2xl max-w-2xl w-full p-[50px] mt-[100px] mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold text-gray-800 text-center mb-6">üìù Create a New Listing</h2>
    
    <form id="listingForm" action="/listings/new" method="POST" class="space-y-5" enctype="multipart/form-data">
      <div>
        <label class="block text-gray-700 font-medium mb-1">Title</label>
        <input type="text" name="title" placeholder="Cozy Beach House"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition outline-none" />
        <p class="text-red-500 text-sm mt-1 hidden" id="titleError"></p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-gray-700 font-medium mb-1">Location</label>
          <input type="text" name="location" placeholder="Goa"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition outline-none" />
          <p class="text-red-500 text-sm mt-1 hidden" id="locationError"></p>
        </div>
        <div>
          <label class="block text-gray-700 font-medium mb-1">Country</label>
          <input type="text" name="country" placeholder="India"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition outline-none" />
          <p class="text-red-500 text-sm mt-1 hidden" id="countryError"></p>
        </div>
      </div>

      <div>
        <label class="block text-gray-700 font-medium mb-1">Price (‚Çπ per night)</label>
        <input type="number" name="price" placeholder="1500"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition outline-none" />
        <p class="text-red-500 text-sm mt-1 hidden" id="priceError"></p>
      </div>

      <!-- <div>
        <label class="block text-gray-700 font-medium mb-1">Image URL</label>
        <input type="url" name="url" placeholder="https://example.com/image.jpg"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition outline-none" />
        <p class="text-red-500 text-sm mt-1 hidden" id="urlError"></p>
      </div> -->

      <div>
        <label class="block text-gray-700 font-medium mb-1">Upload Image</label>
        <input type="file" name="image" accept="image/*"
          class="w-full px-4 py-2 rounded-lg border border-gray-300 file:mr-4 file:py-2 file:px-4
                 file:rounded-lg file:border-0 file:text-sm file:font-semibold
                 file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100
                 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition outline-none" />
        <p class="text-red-500 text-sm mt-1 hidden" id="imageError"></p>
      </div>

      <div>
        <label class="block text-gray-700 font-medium mb-1">Description</label>
        <textarea name="description" rows="4" placeholder="Write a short description about the place..."
          class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition outline-none"></textarea>
        <p class="text-red-500 text-sm mt-1 hidden" id="descriptionError"></p>
      </div>

      <button type="submit"
        class="w-full py-3 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-xl shadow-lg hover:from-indigo-600 hover:to-purple-700 transition-all">
        ‚ûï Create Listing
      </button>
    </form>
  </div>

  <script>
    const form = document.getElementById("listingForm");

    form.addEventListener("submit", function (e) {
      let isValid = true;

      const title = form.title.value.trim();
      const location = form.location.value.trim();
      const country = form.country.value.trim();
      const price = form.price.value.trim();
      const url = form.url.value.trim();
      const file = form.image.files[0];
      const description = form.description.value.trim();

      // Reset error messages
      document.querySelectorAll("p[id$='Error']").forEach(err => {
        err.classList.add("hidden");
        err.innerText = "";
      });

      if (title.length < 3) {
        document.getElementById("titleError").innerText = "Title must be at least 3 characters.";
        document.getElementById("titleError").classList.remove("hidden");
        isValid = false;
      }

      if (location.length < 2) {
        document.getElementById("locationError").innerText = "Location must be at least 2 characters.";
        document.getElementById("locationError").classList.remove("hidden");
        isValid = false;
      }

      if (country.length < 2) {
        document.getElementById("countryError").innerText = "Country must be at least 2 characters.";
        document.getElementById("countryError").classList.remove("hidden");
        isValid = false;
      }

      if (!price || price <= 0) {
        document.getElementById("priceError").innerText = "Price must be greater than 0.";
        document.getElementById("priceError").classList.remove("hidden");
        isValid = false;
      }

      // ‚úÖ Check if user provided either URL or File
      if (!url && !file) {
        document.getElementById("urlError").innerText = "Please provide an Image URL or upload a file.";
        document.getElementById("urlError").classList.remove("hidden");
        document.getElementById("imageError").innerText = "Please provide an Image URL or upload a file.";
        document.getElementById("imageError").classList.remove("hidden");
        isValid = false;
      }

      if (description.length < 10) {
        document.getElementById("descriptionError").innerText = "Description must be at least 10 characters.";
        document.getElementById("descriptionError").classList.remove("hidden");
        isValid = false;
      }

      if (!isValid) {
        e.preventDefault();
      }
    });
  </script>
</body>
